<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@mipmap/enlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.amirhosein.jalase6_1.Enlist">

    <TextView
        android:background="@drawable/dra2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please complete the following form" />

    <EditText
        android:background="@drawable/dra2"
        android:gravity="center"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:hint="Full Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/dra2"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:layout_marginTop="25dp"
        android:hint="Email Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/dra2"
        android:gravity="center"
        android:inputType="numberPassword"
        android:layout_marginTop="25dp"
        android:hint="New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/dra2"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:inputType="numberPassword"
        android:hint="Conferm Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="60dp"
            android:background="@drawable/dra2"
            android:layout_marginTop="25dp"
            android:text="This App for help you.Please dont rub manufacturers.
            Thank you(AmiRhosein soleymani)"
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_marginLeft="112dp"
            android:gravity="center"
            android:background="@drawable/dra2"
            android:layout_marginTop="25dp"
            android:text="Agree Rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" />

        <Button
            android:layout_marginLeft="124dp"
            android:gravity="center"
            android:background="@drawable/dra2"
            android:onClick="btn_click"
            android:layout_marginTop="25dp"
            android:text="Click join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
